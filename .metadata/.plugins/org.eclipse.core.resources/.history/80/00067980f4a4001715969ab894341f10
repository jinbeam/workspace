	public String toEncoding(String str){
		byte[] temp = str.getBytes();
		String string="";
		
		for(int i=0; i<temp.length; i++){
			string += "%"+Integer.toHexString(temp[i]).substring(6)+"%";
		}


		return string;
	}
}
